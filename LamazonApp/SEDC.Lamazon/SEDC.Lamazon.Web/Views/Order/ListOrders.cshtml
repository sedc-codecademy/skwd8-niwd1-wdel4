@model List<OrderViewModel>
@{
    ViewData["Title"] = "ListOrders";
}

<h2>Orders history</h2>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Status</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
        <tr>
            <td>@order.Id</td>
            <td>@order.Status</td>
            <td>@order.Price</td>
            <td>
                <a asp-action="OrderDetails" asp-controller="Order" asp-route-orderId="@order.Id">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
